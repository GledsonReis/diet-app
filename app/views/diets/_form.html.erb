
<%= simple_form_for(@diet) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :start_at, as: :date, input_html: { class: "form-control datepicker" } %>
    <%= f.input :finish_at, as: :date, input_html: { class: "form-control datepicker" } %>
    <%= f.input :ideal_weight, input_html: { class: "form-control" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
